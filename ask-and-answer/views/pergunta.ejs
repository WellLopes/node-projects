<%- include ('partials/header.ejs')%>
<body>
    <%- include ('partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <h1>
            <%= pergunta.titulo %>
        </h1>
        <p>
            <%= pergunta.descricao %>
        </p>
        <hr>
        <form method="POST" action="/responder">
            <h4>Answer</h4>
            <label for="">Resposta:</label>
            <textarea name="corpo" placeholder="Write your answer" class="form-control"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>"> <!--Answer dinamic form-->
            <br>
            <button type="submit" class="btn btn-primary">
                Responder
            </button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <%= resposta.corpo %>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs')%>
